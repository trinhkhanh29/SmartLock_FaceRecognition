<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Khóa Thông Minh</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --primary-dark: #3a56d4;
            --secondary: #7209b7;
            --accent: #f72585;
            --success: #28a745;
            --danger: #e74c3c;
            --warning: #ffc107;
            --info: #17a2b8;
            --text: #2b2d42;
            --text-light: #8d99ae;
            --bg: #f8f9fa;
            --card-bg: rgba(255, 255, 255, 0.85);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --shadow-hover: 0 15px 40px rgba(0, 0, 0, 0.12);
            --radius: 16px;
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .dark-mode {
            --primary: #4895ef;
            --primary-dark: #3a7bc8;
            --secondary: #b5179e;
            --accent: #f72585;
            --success: #2ecc71;
            --danger: #e74c3c;
            --warning: #f39c12;
            --info: #3498db;
            --text: #edf2f4;
            --text-light: #8d99ae;
            --bg: #121212;
            --card-bg: rgba(30, 30, 36, 0.85);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            --shadow-hover: 0 15px 40px rgba(0, 0, 0, 0.4);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: var(--text);
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
            transition: var(--transition);
            position: relative;
            overflow-x: hidden;
        }

        /* Animated background */
        .bg-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
        }

        .bg-circle {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 15s infinite ease-in-out;
        }

        .circle-1 {
            width: 300px;
            height: 300px;
            top: -150px;
            left: -150px;
            animation-delay: 0s;
        }

        .circle-2 {
            width: 200px;
            height: 200px;
            bottom: -100px;
            right: 10%;
            animation-delay: 2s;
        }

        .circle-3 {
            width: 150px;
            height: 150px;
            top: 20%;
            right: -75px;
            animation-delay: 4s;
        }

        .circle-4 {
            width: 100px;
            height: 100px;
            bottom: 10%;
            left: 5%;
            animation-delay: 6s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(10deg); }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Theme toggle */
        .theme-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--card-bg);
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: var(--shadow);
            transition: var(--transition);
            color: var(--text);
            z-index: 100;
            backdrop-filter: blur(10px);
        }

        .theme-toggle:hover {
            transform: rotate(30deg);
        }

        .card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            margin-bottom: 25px;
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
            overflow: hidden;
        }

        .card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-5px);
        }

        /* Decorative elements */
        .decoration {
            position: absolute;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            opacity: 0.1;
            filter: blur(40px);
            z-index: 0;
        }

        .decoration-1 {
            top: -100px;
            right: -100px;
        }

        .decoration-2 {
            bottom: -100px;
            left: -100px;
            background: linear-gradient(135deg, var(--accent), var(--secondary));
        }

        .header-card {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            text-align: center;
            padding: 50px 30px;
            position: relative;
            overflow: hidden;
        }

        .header-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none"><path d="M0,0 L100,0 L100,100 Z" fill="rgba(255,255,255,0.1)"/></svg>');
            background-size: cover;
        }

        .header-card h1 {
            font-size: 2.8rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            position: relative;
            z-index: 1;
        }

        .header-card p {
            font-size: 1.2rem;
            opacity: 0.9;
            max-width: 700px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        .logo {
            width: 70px;
            height: 70px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

        .logo::before {
            content: '';
            position: absolute;
            width: 35px;
            height: 35px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            transform: rotate(45deg);
        }

        .logo i {
            font-size: 2rem;
            color: white;
            z-index: 1;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        h1, h2 {
            color: var(--text);
        }

        h2 {
            font-size: 1.8rem;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 1;
        }

        .dark-mode h2 {
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        h2 i {
            color: var(--primary);
        }

        .lock-list {
            list-style: none;
            padding: 0;
        }

        .lock-item {
            background: var(--card-bg);
            border: 1px solid rgba(0, 0, 0, 0.05);
            padding: 25px;
            border-radius: var(--radius);
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: var(--transition);
            position: relative;
            z-index: 1;
            backdrop-filter: blur(10px);
        }

        .dark-mode .lock-item {
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .lock-item:hover {
            border-color: var(--primary);
            transform: translateY(-5px);
            box-shadow: var(--shadow-hover);
        }

        .lock-info {
            flex: 1;
        }

        .lock-item strong {
            font-size: 1.3rem;
            color: var(--primary);
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .lock-item code {
            background: rgba(67, 97, 238, 0.15);
            padding: 6px 12px;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
            font-size: 0.95em;
            color: var(--primary);
            border: 1px solid rgba(67, 97, 238, 0.2);
            font-weight: 600;
        }

        .lock-item .actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 18px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            text-decoration: none;
            color: white;
            font-size: 14px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        }

        .btn-secondary {
            background: linear-gradient(135deg, #6c757d, #5a6268);
        }

        .btn-success {
            background: linear-gradient(135deg, var(--success), #218838);
        }

        .btn-danger {
            background: linear-gradient(135deg, var(--danger), #c82333);
        }

        .btn-warning {
            background: linear-gradient(135deg, var(--warning), #e0a800);
            color: var(--text);
        }

        .btn-info {
            background: linear-gradient(135deg, var(--info), #138496);
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
            z-index: 1;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--text);
            transition: var(--transition);
        }

        .form-group input {
            width: 100%;
            padding: 16px 20px;
            border-radius: 10px;
            border: 2px solid rgba(0, 0, 0, 0.1);
            box-sizing: border-box;
            font-size: 1rem;
            transition: var(--transition);
            background: rgba(255, 255, 255, 0.7);
            color: var(--text);
            font-weight: 500;
        }

        .dark-mode .form-group input {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid rgba(255, 255, 255, 0.1);
        }

        .form-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
            background: rgba(255, 255, 255, 0.9);
        }

        .dark-mode .form-group input:focus {
            background: rgba(255, 255, 255, 0.1);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text);
        }

        .empty-state i {
            font-size: 5rem;
            margin-bottom: 20px;
            color: var(--text-light);
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            text-align: center;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-hover);
        }

        .stat-card i {
            font-size: 2.8rem;
            margin-bottom: 20px;
        }

        .stat-card .stat-value {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 15px 0;
        }

        .stat-card .stat-label {
            color: var(--text-light);
            font-size: 1rem;
        }

        .stat-locks i { color: var(--primary); }
        .stat-active i { color: var(--success); }
        .stat-inactive i { color: var(--danger); }

        /* Status badges */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-left: 10px;
        }

        .status-active {
            background: rgba(40, 167, 69, 0.15);
            color: var(--success);
        }

        .status-inactive {
            background: rgba(231, 76, 60, 0.15);
            color: var(--danger);
        }

        /* Responsive adjustments - SỬA LẠI HOÀN TOÀN */
        @media (max-width: 992px) {
            .lock-item {
                flex-direction: column;
                align-items: stretch;
                gap: 20px;
            }
            
            .lock-item .actions {
                width: 100%;
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 10px;
            }
            
            .lock-item .actions form {
                width: 100%;
            }
            
            .lock-item .actions .btn,
            .lock-item .actions a {
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            
            .container {
                padding: 0;
            }
            
            .card {
                padding: 20px 15px;
                margin-bottom: 15px;
            }
            
            .header-card {
                padding: 40px 20px;
            }
            
            .header-card h1 {
                font-size: 2rem;
                flex-direction: column;
                gap: 15px;
            }
            
            .logo {
                width: 60px;
                height: 60px;
            }
            
            .logo i {
                font-size: 1.8rem;
            }
            
            .header-card p {
                font-size: 1rem;
            }
            
            .stats-container {
                grid-template-columns: 1fr 1fr;
                gap: 15px;
            }
            
            .stat-card {
                padding: 20px 15px;
            }
            
            .stat-card i {
                font-size: 2.2rem;
            }
            
            .stat-card .stat-value {
                font-size: 2rem;
            }
            
            h2 {
                font-size: 1.4rem;
                flex-wrap: wrap;
            }
            
            .lock-item {
                padding: 20px 15px;
            }
            
            .lock-item strong {
                font-size: 1.1rem;
            }
            
            .lock-item code {
                font-size: 0.85em;
                padding: 5px 10px;
                word-break: break-all;
            }
            
            .lock-item .actions {
                grid-template-columns: 1fr;
                gap: 8px;
            }
            
            .status-badge {
                font-size: 0.75rem;
                padding: 5px 10px;
                margin-left: 0;
                margin-top: 5px;
            }
        }

        @media (max-width: 576px) {
            .theme-toggle {
                top: 10px;
                right: 10px;
                width: 45px;
                height: 45px;
            }
            
            .stats-container {
                grid-template-columns: 1fr;
            }
            
            .header-card h1 {
                font-size: 1.6rem;
            }
            
            .form-group label {
                font-size: 0.9rem;
            }
            
            .form-group input {
                padding: 14px 18px;
                font-size: 0.95rem;
            }
            
            .btn {
                padding: 10px 15px;
                font-size: 13px;
            }
            
            .modal-content {
                width: 95%;
                margin: 5% auto;
                padding: 20px;
            }
            
            .lock-item > div[style] {
                flex-direction: column;
                align-items: flex-start !important;
                gap: 8px !important;
            }
            
            .empty-state i {
                font-size: 3.5rem;
            }
            
            .empty-state p {
                font-size: 1rem;
            }
        }

        @media (max-width: 400px) {
            body {
                padding: 5px;
            }
            
            .card {
                padding: 15px 10px;
                border-radius: 12px;
            }
            
            .header-card {
                padding: 30px 15px;
            }
            
            .header-card h1 {
                font-size: 1.4rem;
            }
            
            .logo {
                width: 50px;
                height: 50px;
            }
            
            .logo i {
                font-size: 1.5rem;
            }
            
            h2 {
                font-size: 1.2rem;
            }
            
            .stat-card {
                padding: 15px 10px;
            }
            
            .stat-card .stat-value {
                font-size: 1.8rem;
            }
            
            .stat-card .stat-label {
                font-size: 0.9rem;
            }
            
            .lock-item {
                padding: 15px 10px;
            }
            
            .lock-item strong {
                font-size: 1rem;
            }
            
            .btn {
                padding: 9px 12px;
                font-size: 12px;
            }
        }

        /* Fix cho copy-id tooltip */
        @media (max-width: 576px) {
            .copy-id:hover::after {
                bottom: auto;
                top: -35px;
                font-size: 0.7rem;
            }
        }
    </style>
</head>
<body>
    <div class="bg-animation">
        <div class="bg-circle circle-1"></div>
        <div class="bg-circle circle-2"></div>
        <div class="bg-circle circle-3"></div>
        <div class="bg-circle circle-4"></div>
    </div>
    
    <button class="theme-toggle" id="themeToggle">
        <i class="fas fa-moon"></i>
    </button>

    <div class="container">
        <div class="card header-card">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <h1>
                <div class="logo">
                    <i class="fas fa-lock"></i>
                </div>
                Quản lý Khóa Thông Minh
            </h1>
            <p>Tạo và quản lý các thiết bị khóa của bạn một cách dễ dàng và an toàn</p>
        </div>

        <!-- Stats Cards -->
        <div class="stats-container">
            <div class="stat-card stat-locks">
                <i class="fas fa-lock"></i>
                <div class="stat-value"><%= locks.length %></div>
                <div class="stat-label">Tổng số khóa</div>
            </div>
            <div class="stat-card stat-active">
                <i class="fas fa-check-circle"></i>
                <div class="stat-value"><%= locks.filter(lock => lock.status === 'active').length %></div>
                <div class="stat-label">Khóa đang hoạt động</div>
            </div>
            <div class="stat-card stat-inactive">
                <i class="fas fa-times-circle"></i>
                <div class="stat-value"><%= locks.filter(lock => lock.status === 'inactive').length %></div>
                <div class="stat-label">Khóa không hoạt động</div>
            </div>
        </div>

        <div class="card">
            <div class="decoration decoration-1"></div>
            <h2><i class="fas fa-plus-circle"></i> Tạo Khóa Mới</h2>
            <form action="/locks/create" method="POST" id="createLockForm">
                <div class="form-group">
                    <label for="lockName"><i class="fas fa-key"></i> Tên Khóa (ví dụ: Nhà chính, Văn phòng, Cổng sau)</label>
                    <input type="text" id="lockName" name="lockName" required placeholder="Nhập tên khóa mới...">
                </div>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Tạo Khóa Mới
                </button>
            </form>
        </div>

        <div class="card">
            <div class="decoration decoration-2"></div>
            <h2><i class="fas fa-list"></i> Danh sách Khóa</h2>
            <ul class="lock-list">
                <% if (locks.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-lock-open"></i>
                        <p>Chưa có khóa nào được tạo.</p>
                        <p>Hãy tạo khóa đầu tiên của bạn bằng form bên trên!</p>
                    </div>
                <% } else { %>
                    <% locks.forEach(lock => { %>
                        <li class="lock-item" id="lock-<%= lock.id %>">
                            <div class="lock-info">
                                <strong><%= lock.name %></strong>
                                <div style="margin-top: 12px; display: flex; align-items: center; flex-wrap: wrap; gap: 10px;">
                                    <code class="copy-id" data-id="<%= lock.id %>">ID: <%= lock.id %></code>
                                    <% if (lock.status === 'active') { %>
                                        <span class="status-badge status-active">
                                            <span class="pulse pulse-active"></span>
                                            <i class="fas fa-circle"></i> Đang hoạt động
                                        </span>
                                    <% } else { %>
                                        <span class="status-badge status-inactive">
                                            <span class="pulse pulse-inactive"></span>
                                            <i class="fas fa-circle"></i> Không hoạt động
                                        </span>
                                    <% } %>
                                </div>
                                <div style="margin-top: 12px; font-size: 0.9rem; color: var(--text-light); display: flex; align-items: center; gap: 8px;">
                                    <i class="far fa-calendar"></i> Tạo ngày: <%= new Date(lock.createdAt).toLocaleDateString('vi-VN') %>
                                </div>
                            </div>
                            <div class="actions">
                                <a href="/register/<%= lock.id %>" class="btn btn-info" target="_blank">
                                    <i class="fas fa-link"></i> Link Đăng ký
                                </a>
                                <a href="/dashboard/<%= lock.id %>" class="btn btn-primary">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                                <!-- THÊM NÚT TRAIN MODEL -->
                                <form action="/locks/train-quick" method="POST" style="display:inline;" onsubmit="return confirm('Train model cho khóa này? (Cần có ít nhất 1 người dùng)');">
                                    <input type="hidden" name="lockId" value="<%= lock.id %>">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-robot"></i> Train Model
                                    </button>
                                </form>
                                <form action="/locks/delete" method="POST" onsubmit="return confirm('Hành động này sẽ xóa vĩnh viễn khóa và toàn bộ dữ liệu liên quan. Bạn có chắc chắn?');">
                                    <input type="hidden" name="lockId" value="<%= lock.id %>">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Xóa Khóa
                                    </button>
                                </form>
                            </div>
                        </li>
                    <% }); %>
                <% } %>
            </ul>
        </div>
    </div>

    <script>
        // Theme toggle
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = themeToggle.querySelector('i');
        
        themeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            
            if (document.body.classList.contains('dark-mode')) {
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            } else {
                themeIcon.classList.remove('fa-sun');
                themeIcon.classList.add('fa-moon');
            }
        });

        // Highlight newly created lock
        const urlParams = new URLSearchParams(window.location.search);
        const newLockId = urlParams.get('newLock');
        if (newLockId) {
            const newLockElement = document.getElementById('lock-' + newLockId);
            if (newLockElement) {
                newLockElement.classList.add('highlight');
                // Scroll to the new lock
                newLockElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        // Copy ID functionality
        document.querySelectorAll('.copy-id').forEach(element => {
            element.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                navigator.clipboard.writeText(id).then(() => {
                    // Visual feedback
                    this.classList.add('copied');
                    setTimeout(() => {
                        this.classList.remove('copied');
                    }, 2000);
                }).catch(err => {
                    console.error('Failed to copy: ', err);
                });
            });
        });

        // Form submission loading state
        const createLockForm = document.getElementById('createLockForm');
        if (createLockForm) {
            createLockForm.addEventListener('submit', function() {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<div class="spinner"></div> Đang tạo...';
                    submitBtn.disabled = true;
                }
            });
        }

        // Add animation to cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe cards for animation
        document.querySelectorAll('.card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            observer.observe(card);
        });

        // Add floating label effect
        const labels = document.querySelectorAll('.form-group label');
        labels.forEach(label => {
            label.innerHTML = label.textContent.split('').map((letter, idx) => 
                `<span style="transition-delay: ${idx * 30}ms">${letter}</span>`
            ).join('');
        });
    </script>
</body>
