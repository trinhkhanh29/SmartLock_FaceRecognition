# ========================================
# NODE.JS ENVIRONMENT CONFIGURATION
# ========================================
# Copy file này thành .env và điền thông tin thực

# Python executable path
PYTHON_PATH=python
# Windows: C:\Users\YourName\AppData\Local\Programs\Python\Python312\python.exe
# Linux/macOS: /usr/bin/python3

# Server configuration
PORT=3000
NODE_ENV=development

# Firebase configuration
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.asia-southeast1.firebasedatabase.app/

# Admin authentication
ADMIN_PASSWORD=your_secure_password_here

# Session secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your_random_session_secret_here

# Optional: Telegram notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Optional: Debug mode
DEBUG_MODE=false

# Audit Logging Configuration
# Options: 'firebase' (write to Firebase), 'console' (console only), 'off' (disabled)
AUDIT_MODE=console
